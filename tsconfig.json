{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}
